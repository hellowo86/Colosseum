<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="23dp"
                android:textColor="@color/primaryText"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="@dimen/extra_margin"
                android:text="Profile"
                android:fontFamily="@font/spoqa_sans_b"
                android:visibility="visible"/>

            <LinearLayout
                android:id="@+id/profileSettingBtn"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:layout_marginLeft="@dimen/extra_margin"
                android:layout_marginTop="@dimen/normal_margin"
                android:layout_marginRight="@dimen/extra_margin"
                android:clipChildren="false">

                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="@dimen/normal_margin"
                    android:orientation="vertical">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/nameText"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="@color/secondaryText"
                            android:text="name"
                            android:maxLines="1"
                            android:textSize="18dp"
                            android:fontFamily="@font/spoqa_sans_b"/>

                        <LinearLayout
                            android:id="@+id/coinBtn"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_marginLeft="5dp"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/coin"/>

                            <TextView
                                android:id="@+id/coinText"
                                android:layout_marginLeft="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/yellow"
                                android:gravity="center"
                                android:fontFamily="@font/spoqa_sans_b"
                                android:textSize="20dp"/>

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/profileSubText"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/secondaryText"
                        android:text="@string/profile_status"
                        android:textSize="13dp" />

                    <android.support.v7.widget.CardView
                        android:id="@+id/profileBtn"
                        android:layout_height="40dp"
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/small_margin"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardBackgroundColor="@color/colorPrimary"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="2dp">

                        <TextView
                            android:id="@+id/profileSettingText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/check"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:fontFamily="@font/spoqa_sans_b"
                            android:textSize="14dp"/>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

            </LinearLayout>

            <FrameLayout
                android:id="@+id/coin2Btn"
                android:layout_marginTop="@dimen/extra_margin"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="?android:attr/selectableItemBackground">

                <View
                    android:layout_marginLeft="@dimen/big_margin"
                    android:layout_marginRight="@dimen/big_margin"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/iconTint"/>

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/extra_margin"
                    android:textColor="@color/secondaryText"
                    android:text="@string/charge_coin"
                    android:textSize="16dp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="@dimen/extra_margin"
                    android:src="@drawable/ic_local_atm_black_48dp"
                    android:tint="@color/iconTint"/>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/notiBtn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="?android:attr/selectableItemBackground">

                <View
                    android:layout_marginLeft="@dimen/big_margin"
                    android:layout_marginRight="@dimen/big_margin"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/iconTint"/>

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/extra_margin"
                    android:textColor="@color/secondaryText"
                    android:text="@string/noti_setting"
                    android:textSize="16dp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="@dimen/extra_margin"
                    android:src="@drawable/ic_notifications_black_24dp"
                    android:tint="@color/iconTint"/>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/settingBtn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="?android:attr/selectableItemBackground">

                <View
                    android:layout_marginLeft="@dimen/big_margin"
                    android:layout_marginRight="@dimen/big_margin"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/iconTint"/>

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/extra_margin"
                    android:textColor="@color/secondaryText"
                    android:text="@string/setting"
                    android:textSize="16dp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="@dimen/extra_margin"
                    android:src="@drawable/ic_settings_black_48dp"
                    android:tint="@color/iconTint"/>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/inviteBtn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="?android:attr/selectableItemBackground">

                <View
                    android:layout_marginLeft="@dimen/big_margin"
                    android:layout_marginRight="@dimen/big_margin"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/iconTint"/>

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/extra_margin"
                    android:textColor="@color/secondaryText"
                    android:text="@string/invite_friends"
                    android:textSize="16dp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="@dimen/extra_margin"
                    android:src="@drawable/ic_redeem_black_48dp"
                    android:tint="@color/iconTint"/>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/contactBtn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="?android:attr/selectableItemBackground">

                <View
                    android:layout_marginLeft="@dimen/big_margin"
                    android:layout_marginRight="@dimen/big_margin"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/iconTint"/>

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/extra_margin"
                    android:textColor="@color/secondaryText"
                    android:text="@string/contact_us"
                    android:textSize="16dp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="@dimen/extra_margin"
                    android:src="@drawable/ic_mail_outline_black_48dp"
                    android:tint="@color/iconTint"/>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/evaluationBtn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="?android:attr/selectableItemBackground">

                <View
                    android:layout_marginLeft="@dimen/big_margin"
                    android:layout_marginRight="@dimen/big_margin"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/iconTint"/>

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/extra_margin"
                    android:textColor="@color/secondaryText"
                    android:text="@string/evaluation"
                    android:textSize="16dp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="@dimen/extra_margin"
                    android:src="@drawable/ic_grade_black_48dp"
                    android:tint="@color/iconTint"/>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/logoutBtn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="?android:attr/selectableItemBackground">

                <View
                    android:layout_marginLeft="@dimen/big_margin"
                    android:layout_marginRight="@dimen/big_margin"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/iconTint"/>

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/extra_margin"
                    android:textColor="@color/secondaryText"
                    android:text="@string/logout"
                    android:textSize="16dp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="@dimen/extra_margin"
                    android:src="@drawable/ic_power_settings_new_black_24dp"
                    android:tint="@color/iconTint"/>

            </FrameLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/big_margin">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="@dimen/normal_margin"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/ic_keyboard_arrow_left_black_48dp"
                android:tint="@color/primaryText"/>

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/primaryText"
                android:text="@string/favorability_test"
                android:fontFamily="@font/spoqa_sans_b"
                android:visibility="visible"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/normal_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/extra_margin">

            <TextView
                android:id="@+id/stepText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/show_another_photo"
                android:textColor="@color/secondaryText"
                android:textSize="15dp"
                android:fontFamily="@font/spoqa_sans_b" />

            <TextView
                android:id="@+id/statusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ing"
                android:textColor="@color/blue"
                android:textSize="18dp"
                android:layout_marginLeft="@dimen/normal_margin"
                android:fontFamily="@font/spoqa_sans_b" />

        </LinearLayout>

        <TextView
            android:id="@+id/stepSubText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginBottom="10dp"
            android:text="@string/show_another_photo_sub"
            android:textColor="@color/secondaryText"
            android:fontFamily="@font/spoqa_sans_r"
            android:layout_marginLeft="@dimen/extra_margin"
            android:textSize="14dp"/>

        <FrameLayout
            android:id="@+id/youLy"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipChildren="false"
            android:visibility="invisible">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="@dimen/extra_margin"
                android:layout_marginRight="@dimen/extra_margin"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="@color/almostWhite"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/youNameText"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:textSize="14dp"
                        android:text="name"
                        android:fontFamily="@font/spoqa_sans_b"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="30dp"
                        android:layout_marginLeft="@dimen/big_margin"
                        android:layout_marginRight="25dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/youStatusIconImg"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="0dp"
                            android:src="@drawable/color_in_love"
                            android:elevation="1dp"/>

                        <TextView
                            android:id="@+id/youStatusText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:textSize="14dp"
                            android:textColor="@color/secondaryText"
                            android:fontFamily="@font/spoqa_sans_r"/>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <ImageView
                android:id="@+id/youImg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="0dp"
                android:src="@drawable/default_profile"
                android:elevation="1dp"/>

            <android.support.v7.widget.CardView
                android:id="@+id/likeLy"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right|bottom"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="3dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="20dp"
                app:cardElevation="1dp"
                android:visibility="invisible">

                <ImageView
                    android:id="@+id/likeBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="center"
                    android:padding="10dp"
                    android:src="@drawable/heart"
                    android:tint="@color/white"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/hateLy"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right|bottom"
                android:layout_marginRight="100dp"
                android:layout_marginBottom="3dp"
                app:cardBackgroundColor="@color/disableText"
                app:cardCornerRadius="20dp"
                app:cardElevation="1dp"
                android:visibility="invisible">

                <ImageView
                    android:id="@+id/hateBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="center"
                    android:padding="10dp"
                    android:src="@drawable/broken_heart"
                    android:tint="@color/white"/>

            </android.support.v7.widget.CardView>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipChildren="false"
            android:id="@+id/meLy"
            android:visibility="invisible">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="@dimen/extra_margin"
                android:layout_marginRight="@dimen/extra_margin"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="@color/background"
                app:cardCornerRadius="10dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/meNameText"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:textSize="14dp"
                        android:text="name"
                        android:fontFamily="@font/spoqa_sans_b"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="30dp"
                        android:layout_marginLeft="@dimen/big_margin"
                        android:layout_marginRight="25dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/meStatusIconImg"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="0dp"
                            android:src="@drawable/color_love_letter"
                            android:elevation="1dp"/>

                        <TextView
                            android:id="@+id/meStatusText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:textSize="14dp"
                            android:textColor="@color/secondaryText"
                            android:fontFamily="@font/spoqa_sans_r"/>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <ImageView
                android:id="@+id/meImg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="0dp"
                android:src="@drawable/default_profile"
                android:elevation="1dp"/>

            <android.support.v7.widget.CardView
                android:id="@+id/regLy"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="right|bottom"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="3dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="1dp"
                android:visibility="invisible">

                <TextView
                    android:id="@+id/regBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/secondaryText"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="center"
                    android:text="@string/reg"
                    android:textSize="14dp"
                    android:fontFamily="@font/spoqa_sans_b"/>

            </android.support.v7.widget.CardView>

        </FrameLayout>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:indeterminateTint="@color/colorPrimary"
        android:visibility="gone"/>

</FrameLayout>
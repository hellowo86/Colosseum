<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/swipeRefreshView">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/optionLy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="@dimen/big_margin"
                    android:layout_marginLeft="@dimen/big_margin"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/backBtn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:src="@drawable/ic_keyboard_arrow_left_black_48dp"
                        android:tint="@color/primaryText"/>

                    <TextView
                        android:id="@+id/titleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22dp"
                        android:textColor="@color/primaryText"
                        android:text="@string/favorability_test"
                        android:fontFamily="@font/spoqa_sans_b"
                        android:visibility="visible"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/extra_margin"
                    android:layout_marginRight="@dimen/extra_margin">

                    <ImageView
                        android:id="@+id/profileImg"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="5dp"
                        android:background="@drawable/fill_circle_primary"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical">

                        <TextView
                            android:id="@+id/stepText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/secondaryText"
                            android:text="@string/show_another_photo"
                            android:textSize="14dp"
                            android:fontFamily="@font/spoqa_sans_b" />

                        <android.support.v7.widget.CardView
                            android:id="@+id/optionBtn"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="5dp"
                            app:cardBackgroundColor="@color/green"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="0dp">

                            <TextView
                                android:id="@+id/statusText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textColor="@color/primaryWhiteText"
                                android:text="@string/ing"
                                android:textSize="18dp"
                                android:fontFamily="@font/spoqa_sans_b" />

                        </android.support.v7.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="63dp"
                    android:layout_marginTop="5dp"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    android:src="@drawable/dot_3"
                    android:tint="@color/colorPrimary"/>

                <android.support.v7.widget.CardView
                    android:id="@+id/step1Ly"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="@dimen/extra_margin"
                    android:layout_marginRight="@dimen/extra_margin"
                    android:layout_marginBottom="10dp"
                    app:cardBackgroundColor="@color/almostWhite"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="3dp">

                    <ImageView
                        android:id="@+id/cover1Img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/green_gradient"
                        android:visibility="gone"/>

                    <LinearLayout
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/normal_margin"
                            android:layout_marginLeft="@dimen/big_margin"
                            android:text="@string/show_another_photo"
                            android:textColor="@color/secondaryWhiteText"
                            android:textSize="18dp"
                            android:fontFamily="@font/spoqa_sans_b" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/small_margin"
                            android:layout_marginLeft="@dimen/big_margin"
                            android:layout_marginRight="@dimen/big_margin"
                            android:layout_marginBottom="10dp"
                            android:text="@string/show_another_photo_sub"
                            android:textColor="@color/secondaryWhiteText"
                            android:fontFamily="@font/spoqa_sans_r"
                            android:textSize="14dp"/>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone">

                            <android.support.v7.widget.CardView
                                android:id="@+id/my1Btn"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="@dimen/big_margin"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="10dp"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="10dp"
                                app:cardElevation="1dp">

                                <TextView
                                    android:id="@+id/my1Text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:layout_gravity="center"
                                    android:text="Ing.."
                                    android:textSize="18dp"
                                    android:fontFamily="@font/spoqa_sans_b" />

                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                android:id="@+id/you1Btn"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="@dimen/big_margin"
                                android:layout_marginBottom="10dp"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="10dp"
                                app:cardElevation="1dp">

                                <TextView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/green_gradient"
                        android:visibility="gone"/>

                    <LinearLayout
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/normal_margin"
                            android:layout_marginLeft="@dimen/big_margin"
                            android:text="@string/qna"
                            android:textColor="@color/secondaryWhiteText"
                            android:textSize="18dp"
                            android:fontFamily="@font/spoqa_sans_b" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/small_margin"
                            android:layout_marginLeft="@dimen/big_margin"
                            android:layout_marginRight="@dimen/big_margin"
                            android:layout_marginBottom="10dp"
                            android:text="@string/qna_sub"
                            android:textColor="@color/secondaryWhiteText"
                            android:fontFamily="@font/spoqa_sans_r"
                            android:textSize="14dp"/>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone">

                            <android.support.v7.widget.CardView
                                android:id="@+id/my3Btn"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="@dimen/big_margin"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="10dp"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="10dp"
                                app:cardElevation="1dp">

                                <TextView
                                    android:id="@+id/my3Text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:layout_gravity="center"
                                    android:text="Ing.."
                                    android:textSize="18dp"
                                    android:fontFamily="@font/spoqa_sans_b" />

                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                android:id="@+id/you3Btn"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="@dimen/big_margin"
                                android:layout_marginBottom="10dp"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="10dp"
                                app:cardElevation="1dp">

                                <TextView
                                    android:id="@+id/you3Text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:layout_gravity="center"
                                    android:text="Ing.."

                            </android.support.v7.widget.CardView>

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="63dp"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    android:src="@drawable/dot_3"
                    android:tint="@color/colorPrimary"/>

                <android.support.v7.widget.CardView
                    android:id="@+id/step4Ly"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="@dimen/extra_margin"
                    android:layout_marginRight="@dimen/extra_margin"
                    android:layout_marginBottom="10dp"
                    app:cardBackgroundColor="@color/almostWhite"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="3dp">

                    <ImageView
                        android:id="@+id/cover4Img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

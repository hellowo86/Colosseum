<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLy"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="@dimen/normal_margin"
        android:layout_marginBottom="@dimen/normal_margin"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="?android:attr/selectableItemBackground"
            android:padding="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_keyboard_arrow_left_black_48dp"
            android:tint="@color/primaryText" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="23dp"
            android:textColor="@color/primaryText"
            android:text="@string/charge_coin"
            android:fontFamily="@font/spoqa_sans_b"
            android:visibility="visible"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp">

            <FrameLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/big_margin">

                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/coinLy"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/coin"/>

                        <TextView
                            android:id="@+id/currentCoinText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="8dp"
                            android:text="0"
                            android:textColor="@color/yellow"
                            android:textStyle="bold"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="3dp"
                            android:text="@string/coin"
                            android:textColor="@color/yellow"
                            android:textStyle="bold"
                            android:textSize="20dp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/current_coin"
                        android:textSize="@dimen/sub_text_size"
                        android:textColor="@color/disableText"
                        android:layout_marginTop="3dp"
                        android:gravity="center"/>

                </LinearLayout>

            </FrameLayout>

        </android.support.v7.widget.CardView>

    </FrameLayout>

    <FrameLayout
        android:layout_marginTop="@dimen/normal_margin"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="?android:attr/selectableItemBackground">

        <View
            android:layout_marginLeft="@dimen/big_margin"
            android:layout_marginRight="@dimen/big_margin"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/iconTint"/>

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/extra_margin"
            android:textColor="@color/secondaryText"
            android:text="@string/coin_10"
            android:textSize="16dp" />

        <android.support.v7.widget.CardView
            android:id="@+id/coin10Btn"
            android:layout_gravity="center_vertical|right"
            android:layout_width="100dp"
            android:layout_height="36dp"
            android:layout_marginRight="@dimen/extra_margin"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="18dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/coin"/>

                <TextView
                    android:id="@+id/coin10Price"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0$"
                    android:textColor="@color/secondaryText"
                    android:gravity="center"
                    android:fontFamily="@font/spoqa_sans_b"
                    android:textSize="13dp"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="?android:attr/selectableItemBackground">

        <View
            android:layout_marginLeft="@dimen/big_margin"
            android:layout_marginRight="@dimen/big_margin"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/iconTint"/>

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/extra_margin"
            android:textColor="@color/secondaryText"
            android:text="@string/coin_50"
            android:textSize="16dp" />

        <android.support.v7.widget.CardView
            android:id="@+id/coin50Btn"
            android:layout_gravity="center_vertical|right"
            android:layout_width="100dp"
            android:layout_height="36dp"
            android:layout_marginRight="@dimen/extra_margin"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="18dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/coin"/>

                <TextView
                    android:id="@+id/coin50Price"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0$"
                    android:textColor="@color/secondaryText"
                    android:gravity="center"
                    android:fontFamily="@font/spoqa_sans_b"
                    android:textSize="13dp"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="?android:attr/selectableItemBackground">

        <View
            android:layout_marginLeft="@dimen/big_margin"
            android:layout_marginRight="@dimen/big_margin"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/iconTint"/>

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/extra_margin"
            android:textColor="@color/secondaryText"
            android:text="@string/coin_100"
            android:textSize="16dp" />

        <android.support.v7.widget.CardView
            android:id="@+id/coin100Btn"
            android:layout_gravity="center_vertical|right"
            android:layout_width="100dp"
            android:layout_height="36dp"
            android:layout_marginRight="@dimen/extra_margin"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="18dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/coin"/>

                <TextView
                    android:id="@+id/coin100Price"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0$"
                    android:textColor="@color/secondaryText"
                    android:gravity="center"
                    android:fontFamily="@font/spoqa_sans_b"
                    android:textSize="13dp"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </FrameLayout>

</LinearLayout>
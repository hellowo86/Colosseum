<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/container"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/top_menu_bar_height">
    </FrameLayout>

    <LinearLayout
        android:id="@+id/bottomTabs"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_menu_bar_height"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:background="@color/white"
        android:layout_gravity="bottom"
        android:elevation="8dp">

        <FrameLayout
            android:id="@+id/homeTab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/homeTabImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:padding="@dimen/normal_margin"
                android:src="@drawable/search_love"
                android:tint="@color/iconTint"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/matchingTab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/matchingTabImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:padding="@dimen/normal_margin"
                android:src="@drawable/color_potion"
                android:tint="@color/iconTint"/>

            <android.support.v7.widget.CardView
                android:id="@+id/chemistryBadge"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:layout_margin="10dp"
                android:visibility="visible"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="10dp"
                app:cardElevation="1dp">

                <TextView
                    android:id="@+id/chemistryBadgeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:text="0"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:textSize="10dp"
                    android:textColor="@color/primaryWhiteText" />

            </android.support.v7.widget.CardView>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/chatTab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/chatTabImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:padding="@dimen/normal_margin"
                android:src="@drawable/chat"
                android:tint="@color/iconTint"/>

            <android.support.v7.widget.CardView
                android:id="@+id/chatBadge"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:layout_margin="10dp"
                android:visibility="visible"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="10dp"
                app:cardElevation="1dp">

                <TextView
                    android:id="@+id/chatBadgeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:text="0"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:textSize="10dp"
                    android:textColor="@color/primaryWhiteText" />

            </android.support.v7.widget.CardView>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/communityTab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/communityTabImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:padding="11dp"
                android:src="@drawable/ic_whatshot_black_48dp"
                android:tint="@color/iconTint"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/profileTab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/profileImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:padding="13dp"
                android:src="@drawable/default_profile"/>

        </FrameLayout>

    </LinearLayout>

</FrameLayout>

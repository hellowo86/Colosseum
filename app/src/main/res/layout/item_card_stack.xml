<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="@color/background"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="1dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.4">

            <ImageView
                android:id="@+id/profileImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryLight"
                android:scaleType="centerCrop"/>

        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/big_margin"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/nameText"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="22dp"
                    android:gravity="center"
                    android:textColor="@color/primaryText"
                    android:layout_gravity="center_horizontal"
                    android:text="Name"
                    android:fontFamily="@font/spoqa_sans_b"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:text="@string/age"
                    android:textColor="@color/green"
                    android:fontFamily="@font/spoqa_sans_b"/>

                <TextView
                    android:id="@+id/ageText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/green"
                    android:fontFamily="@font/spoqa_sans_b"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:text="@string/distance_of_me"
                    android:textColor="@color/green"
                    android:fontFamily="@font/spoqa_sans_b"/>

                <TextView
                    android:id="@+id/locText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/green"
                    android:fontFamily="@font/spoqa_sans_b"/>

            </LinearLayout>

            <TextView
                android:id="@+id/moreText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_margin"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="@dimen/extra_margin"
                android:textSize="15dp"
                android:text="MoreInfo"
                android:textColor="@color/secondaryText"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/spoqa_sans_r"/>

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/circleCover"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/fill_circle_primary"
            android:layout_gravity="center"
            android:alpha="0"
            android:scaleX="10"
            android:scaleY="10" />

        <ImageView
            android:id="@+id/heartImg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/heart"
            android:tint="@color/white"
            android:layout_gravity="center"
            android:alpha="0" />

    </FrameLayout>

</android.support.v7.widget.CardView>